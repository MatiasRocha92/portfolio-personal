---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-3 animate-fade-left">
            <h2 class="font-mono text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Experiencia
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8 lg:col-start-6 animate-fade-right">
            <div class="space-y-8 max-w-4xl mx-auto">
              {
                Array.isArray(siteConfig.experience) 
                  ? siteConfig.experience.map((exp, index) => (
                      <div class="experience-item">
                        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
                          <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                            <div>
                              <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-2">
                                {exp.title}
                              </h3>
                              <p
                                class="text-lg sm:text-xl font-medium"
                                style={`color: ${siteConfig.accentColor}`}
                              >
                                {exp.company}
                              </p>
                            </div>
                            <span class="text-sm sm:text-base text-gray-500 mt-2 sm:mt-0 font-mono">
                              {exp.period}
                            </span>
                          </div>

                          <div class="space-y-4">
                            <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
                              {exp.description}
                            </p>
                            <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                              {exp.details}
                            </p>
                          </div>
                        </div>
                      </div>
                    ))
                  : (
                      <div class="experience-item">
                        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600 text-justify">
                          {siteConfig.experience}
                        </p>
                      </div>
                    )
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
